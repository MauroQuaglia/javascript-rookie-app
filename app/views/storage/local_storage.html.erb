<a id="set_item" href="#">Set Item in LocalStorage</a>
<hr />
<a id="get_item" href="#">Get Item from LocalStorage</a>
<script>
    document.querySelector('#set_item').addEventListener('click', (event) => {
        window.localStorage.setItem('MQ-1', '45');

        let my_obj = {name: 'Mauro', surname: 'Quaglia'};
        window.localStorage.setItem('MQ-2', JSON.stringify(my_obj));

        event.preventDefault();
    })

    document.querySelector('#get_item').addEventListener('click', (event) => {
        alert(window.localStorage.getItem('MQ-2'));
        event.preventDefault();
    })
</script>